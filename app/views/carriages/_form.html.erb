<%= form_for(@carriage) do |f| %>
  <% if @carriage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carriage.errors.count, "error") %> prohibited this carriage from being saved:</h2>

      <ul>
      <% @carriage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :train_id, "Номер поезда, к которому добавить" %><br>
    
    <%= f.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= f.label :type_carriage, "Тип вагона:" %>
    <%= f.select :type_carriage, Carriage.type_carriage%>
  </div>

  <div class="field">
    <%= f.label :number, "Номер вагона" %><br>
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :top_seats, "Количество верхних мест" %><br>
    <%= f.number_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats, "Количество нижних мест" %><br>
    <%= f.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats, "Количество боковых верхних мест" %><br>
    <%= f.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats, "Количество боковых нижних мест" %><br>
    <%= f.number_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :seat_seats, "Количество сидячих мест" %><br>
    <%= f.number_field :seat_seats %>
  </div>

  <div class="actions">
     <%= f.submit %>
  </div>
<% end %>
