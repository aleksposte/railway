<%= form_for(@train) do |f| %>
  
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :route %><br>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :sort_order, 'Отсортировать с головы состава!' %>
    <%= f.check_box :sort_order %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

