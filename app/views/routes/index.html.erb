<%= link_to 'Главная', root_path %>

<p id="notice"><%= notice %></p>
<h1>Маршруты:</h1>

<table>
  <thead>
    <tr>
      <th>Список:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= link_to 'Показать', route %></td>
        <td><%= link_to 'Редактировать', edit_route_path(route) %></td>
        <td><%= link_to 'Удалить', route, method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый маршрут', new_route_path %><br>


